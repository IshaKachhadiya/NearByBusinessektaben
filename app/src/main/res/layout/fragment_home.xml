<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragment.HomeFragment">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_marginBottom="@dimen/_15sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp">


                <TextView
                    android:id="@+id/tv_hello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/dm_medium"
                    android:text="Hey There"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_13ssp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />


                <LinearLayout
                    android:id="@+id/ll_middle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:orientation="horizontal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_hello">


                    <TextView
                        android:id="@+id/tv_usename"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dm_medium"
                        android:text="Rihan Desail"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_15ssp" />


                    <ImageView
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="end"
                        android:layout_marginStart="12dp"
                        android:adjustViewBounds="true"
                        android:src="@drawable/ic_hey" />


                </LinearLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/bg_search_rounded"
                    app:layout_constraintTop_toBottomOf="@id/ll_middle">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/icSearch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_5sdp"
                        android:padding="@dimen/_6sdp"
                        android:src="@drawable/ic_search"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <androidx.appcompat.widget.AppCompatEditText
                        android:textCursorDrawable="@drawable/ic_cursoor_color"
                        android:id="@+id/ic_edittext"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/dm_regular"
                        android:hint="@string/search_here"
                        android:paddingHorizontal="@dimen/_5sdp"
                        android:paddingVertical="@dimen/_15sdp"
                        android:textColorHint="@color/colorSearch"
                        android:textSize="@dimen/_12sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/icSearch"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

                <RelativeLayout
                    android:id="@+id/rel_inquiry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/constraintLayout">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dm_medium"
                        android:text="Our Inquiry"
                        android:textAllCaps="true"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_13ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_seeall_inquiry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="end"
                        android:fontFamily="@font/dm_regular"
                        android:gravity="end"
                        android:text="See all"
                        android:textColor="@color/colorAppLight"
                        android:textSize="@dimen/_11ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </RelativeLayout>


                <HorizontalScrollView
                    android:id="@+id/horizontalscrollview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_11sdp"
                    android:scrollbars="none"
                    app:layout_constraintTop_toBottomOf="@+id/rel_inquiry">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_all"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_dark_bg"
                            android:fontFamily="@font/dm_regular"
                            android:paddingHorizontal="@dimen/_18sdp"
                            android:paddingVertical="@dimen/_7sdp"
                            android:text="All"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tv_pending"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:background="@drawable/ic_light_bg"
                            android:fontFamily="@font/dm_regular"
                            android:paddingHorizontal="@dimen/_18sdp"
                            android:paddingVertical="@dimen/_7sdp"
                            android:text="Pending"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tv_ongoing"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:background="@drawable/ic_light_bg"
                            android:fontFamily="@font/dm_regular"
                            android:paddingHorizontal="@dimen/_18sdp"
                            android:paddingVertical="@dimen/_7sdp"
                            android:text="Ongoing"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tv_closed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:background="@drawable/ic_light_bg"
                            android:fontFamily="@font/dm_regular"
                            android:paddingHorizontal="@dimen/_18sdp"
                            android:paddingVertical="@dimen/_7sdp"
                            android:text="Closed"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_12ssp" />


                    </LinearLayout>


                </HorizontalScrollView>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_inquiry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:orientation="vertical"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@+id/horizontalscrollview"
                    tools:itemCount="4"
                    tools:listitem="@layout/item_inquiry" />

                <RelativeLayout
                    android:id="@+id/rel_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/recyclerview_inquiry">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/dm_medium"
                        android:text="Product"
                        android:textAllCaps="true"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/_13ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_seeallproduct"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_gravity="end"
                        android:fontFamily="@font/dm_regular"
                        android:gravity="end"
                        android:text="See all"
                        android:textColor="@color/colorAppLight"
                        android:textSize="@dimen/_11ssp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </RelativeLayout>

                <HorizontalScrollView
                    android:id="@+id/horizontalscrollview_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:scrollbars="none"
                    app:layout_constraintTop_toBottomOf="@+id/rel_product">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_all_product"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_dark_bg"
                            android:fontFamily="@font/dm_regular"
                            android:paddingHorizontal="@dimen/_18sdp"
                            android:paddingVertical="@dimen/_7sdp"
                            android:text="All"
                            android:textColor="@color/colorWhite"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tv_pending_product"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:background="@drawable/ic_light_bg"
                            android:fontFamily="@font/dm_regular"
                            android:paddingHorizontal="@dimen/_18sdp"
                            android:paddingVertical="@dimen/_7sdp"
                            android:text="Men Clothes"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tv_ongoing_product"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:background="@drawable/ic_light_bg"
                            android:fontFamily="@font/dm_regular"
                            android:paddingHorizontal="@dimen/_18sdp"
                            android:paddingVertical="@dimen/_7sdp"
                            android:text="Women Clothes"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:id="@+id/tv_closed_product"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_7sdp"
                            android:background="@drawable/ic_light_bg"
                            android:fontFamily="@font/dm_regular"
                            android:paddingHorizontal="@dimen/_18sdp"
                            android:paddingVertical="@dimen/_7sdp"
                            android:text="Kids Clothes"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_12ssp" />


                    </LinearLayout>


                </HorizontalScrollView>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerview_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:layout_constraintTop_toBottomOf="@+id/horizontalscrollview_product"
                    tools:itemCount="5"
                    tools:listitem="@layout/item_product" />


            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <ImageView
        android:id="@+id/iv_add_product"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_add_product"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>