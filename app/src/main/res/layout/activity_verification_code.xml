<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_app_bg"
    tools:context=".ui.main.view.Login.VerificationCodeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_80sdp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_login" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_40sdp"
            android:fontFamily="@font/dm_bold"
            android:text="Verification Code"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_14ssp" />

        <View
            android:layout_width="@dimen/_30sdp"
            android:layout_height="1dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_3sdp"
            android:background="@color/colorBlack" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/dm_regular"
            android:gravity="center"
            android:text="Please type the verification code sent to your mobile Number"
            android:textColor="@color/colorAppLight"
            android:textSize="@dimen/_11ssp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_20sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_phone_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/dm_regular"
                android:gravity="center"
                android:text="+91 87580 ****"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_11ssp" />

            <LinearLayout
                android:id="@+id/ll_number_change"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/dm_bold"
                    android:gravity="center"
                    android:includeFontPadding="false"
                    android:text="Change"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/_11ssp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/colorBlack" />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_20sdp"
            android:gravity="center"
            android:orientation="horizontal">


            <com.chaos.view.PinView
                android:id="@+id/pinView"
                style="@style/PinWidget.PinView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:cursorVisible="true"
                android:fontFamily="@font/dm_medium"
                android:gravity="center"
                android:inputType="text"
                android:itemBackground="@drawable/ic_et_bg"
                android:padding="@dimen/_5sdp"
                android:text=""
                android:textColor="@color/colorApp"
                android:textColorHint="@color/colorBlack"
                android:textSize="@dimen/_14ssp"
                android:textStyle="bold"
                app:cursorColor="@color/colorBlack"
                app:cursorWidth="2dp"
                app:hideLineWhenFilled="true"
                app:itemCount="6"
                app:itemHeight="48dp"
                app:itemRadius="10dp"
                app:itemSpacing="5dp"
                app:itemWidth="48dp"
                app:lineColor="@color/transparent"
                app:lineWidth="2dp"
                app:viewType="rectangle" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_resend_otp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            android:fontFamily="@font/dm_regular"
            android:gravity="center"
            android:text="Resend OTP in 20 Seconds"
            android:textColor="@color/colorBlack"
            android:textSize="@dimen/_11ssp" />


        <LinearLayout
            android:id="@+id/ll_send_again"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/dm_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="SEND AGAIN"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_11ssp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/colorBlack" />


        </LinearLayout>


        <TextView

            android:id="@+id/txt_verify"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/_80sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:background="@drawable/ic_et_bg"
            android:backgroundTint="@color/colorApp"
            android:drawablePadding="@dimen/_10sdp"
            android:fontFamily="@font/dm_medium"
            android:gravity="center"
            android:hint="Verify"
            android:padding="@dimen/_10sdp"
            android:textColorHint="@color/colorWhite"
            android:textSize="@dimen/_12ssp" />

    </LinearLayout>


</LinearLayout>