<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_app_bg"
    tools:context=".ui.main.view.Login.ProfileSetUpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="@dimen/_10sdp"
                android:fontFamily="@font/dm_medium"
                android:text="Profile Setup"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/_13ssp" />

        </LinearLayout>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_120sdp"
            android:layout_height="@dimen/_120sdp"
            android:layout_gravity="center"
            android:outlineAmbientShadowColor="#CC009BB3"
            android:outlineSpotShadowColor="#CC009BB3"
            app:cardBackgroundColor="@color/colorWhite"
            app:cardCornerRadius="@dimen/_10sdp"
            app:cardElevation="5dp"
            app:cardMaxElevation="5dp"
            app:strokeWidth="0dp">

            <ImageView
                android:id="@+id/iv_profile"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_user_profile" />


        </com.google.android.material.card.MaterialCardView>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_20sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_13sdp"
                    android:outlineAmbientShadowColor="#CC009BB3"
                    android:outlineSpotShadowColor="#CC009BB3"
                    app:cardBackgroundColor="@color/colorWhite"
                    app:cardCornerRadius="@dimen/_10sdp"
                    app:cardElevation="@dimen/_3sdp"
                    app:strokeColor="#20009BB3"
                    app:strokeWidth="1dp">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_5sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:fontFamily="@font/dm_medium"
                            android:text="User Name"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_13ssp" />

                        <EditText
                            android:id="@+id/edUsername"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/ic_et_profile_bg"
                            android:fontFamily="@font/dm_medium"
                            android:hint="Enter Name "
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/colorBlack"
                            android:textColorHint="@color/colorAppLight"
                            android:textCursorDrawable="@drawable/ic_cursoor_color"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/dm_medium"
                            android:text="Mobile No."
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_13ssp" />

                        <EditText
                            android:inputType="number"
                            android:id="@+id/edMobileNumber"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/ic_et_profile_bg"
                            android:fontFamily="@font/dm_medium"
                            android:hint="Enter Number "
                            android:padding="@dimen/_10sdp"
                            android:textColor="@color/colorBlack"
                            android:textColorHint="@color/colorAppLight"
                            android:textCursorDrawable="@drawable/ic_cursoor_color"
                            android:textSize="@dimen/_12ssp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/dm_medium"
                            android:text="Address"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_13ssp" />


                        <EditText
                            android:id="@+id/edAddress"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_80sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:background="@drawable/ic_et_profile_bg"
                            android:fontFamily="@font/dm_medium"
                            android:gravity="top"
                            android:hint="Enter Address "
                            android:padding="@dimen/_10sdp"
                            android:textColorHint="@color/colorAppLight"
                            android:textCursorDrawable="@drawable/ic_cursoor_color"
                            android:textSize="@dimen/_12ssp" />


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:fontFamily="@font/dm_medium"
                            android:text="Gender"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/_13ssp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/_10sdp"
                            android:orientation="horizontal">

                            <RadioGroup
                                android:id="@+id/radioGroup"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <com.google.android.material.radiobutton.MaterialRadioButton
                                    style="@style/Widget.App.RadioButton"
                                    android:id="@+id/rb_male"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/dm_medium"
                                    android:text="Male"
                                    android:textSize="@dimen/_12ssp" />

                                <com.google.android.material.radiobutton.MaterialRadioButton
                                    style="@style/Widget.App.RadioButton"
                                    android:id="@+id/rb_female"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/dm_medium"
                                    android:text="Female"
                                    android:textSize="@dimen/_12ssp" />

                                <com.google.android.material.radiobutton.MaterialRadioButton
                                    style="@style/Widget.App.RadioButton"
                                    android:id="@+id/rb_other"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:fontFamily="@font/dm_medium"
                                    android:text="Other"
                                    android:textSize="@dimen/_12ssp" />

                            </RadioGroup>

                        </LinearLayout>

                        <TextView

                            android:id="@+id/txtSubmit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="@dimen/_40sdp"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:background="@drawable/ic_et_bg"
                            android:backgroundTint="@color/colorApp"
                            android:fontFamily="@font/dm_medium"
                            android:gravity="center"
                            android:hint="Submit"
                            android:padding="@dimen/_10sdp"
                            android:textColorHint="@color/colorWhite"
                            android:textSize="@dimen/_12ssp" />


                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>


        </ScrollView>


    </LinearLayout>

</LinearLayout>